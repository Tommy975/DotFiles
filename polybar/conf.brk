[colors]
background = ${xrdb:color0:#222}
;background = #222
;background-alt = #444
;oreground = ${xrdb:color7:#222}
;foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


foreground = ${xrdb:foreground}
background-alt = ${xrdb:background}
border-bottom = #333
border-top    = #333

underline     = #00f
overline      = #f00


navy    = #001f3f
aqua    = #7fdbff
teal    = #39cccc
olive   = #3d9970
lime    = #01ff70
orange  = #ff851b
maroon  = #85144b
fuchsia = #f012be
purple  = #b10dc9
gray    = #aaaaaa
silver  = #dddddd




[bar/master]
font-0 = SFNS Display Regular:size=12;0
font-1 = Font Awesome 5 Brands:weight=Regular:size=12:antialias=false;
font-2 = Font Awsome 5 Free:style=Regular:size=12:antialias=false;
font-3 = unifont:fontformat=truetype:size=10:antialias=false;0
font-4 = FontAwesome:size=12



[bar/example]
inherit= bar/master
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 3
border-color = ${colors.background}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2


modules-left = logomenu i3
modules-center = mpd
modules-right = filesystem xbacklight alsa pulseaudio xkeyboard memory cpu wlan eth battery temperature date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
wm-restack = i3

;override-redirect = true


scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize
